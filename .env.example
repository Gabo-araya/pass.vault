# Metadatos App - Variables de Entorno
# Copia este archivo como .env y configura los valores apropiados

# =====  CONFIGURACIÓN BÁSICA =====
# Clave secreta para Flask (OBLIGATORIO - genera una clave fuerte)
SECRET_KEY=your-very-strong-secret-key-here-change-this-in-production

# Modo de depuración (solo para desarrollo)
FLASK_DEBUG=False
FLASK_ENV=production

# ===== BASE DE DATOS =====
# URL de la base de datos
DATABASE_URL=sqlite:///metadatos.db
# Para PostgreSQL: postgresql://username:password@localhost/metadatos_db
# Para MySQL: mysql://username:password@localhost/metadatos_db

# ===== CREDENCIALES DE ADMINISTRADOR =====
# Usuario y contraseña del administrador (CAMBIAR EN PRODUCCIÓN)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here

# ===== CONFIGURACIÓN DE ARCHIVOS =====
# Carpeta donde se almacenan los archivos subidos
UPLOAD_FOLDER=uploads

# Tamaño máximo de archivos en bytes (16MB por defecto)
MAX_CONTENT_LENGTH=16777216

# Extensiones de archivo permitidas (separadas por comas)
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,bmp,webp,doc,docx,xls,xlsx,ppt,pptx,zip,rar,7z,tar,gz,mp3,wav,ogg,mp4,avi,mkv,mov,csv,json,xml,ods,odt,odp

# ===== CONFIGURACIÓN DE SEGURIDAD =====
# Tiempo de vida de la sesión en segundos (24 horas por defecto)
PERMANENT_SESSION_LIFETIME=86400

# Configurar cookies seguras (solo HTTPS en producción)
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ===== CONFIGURACIÓN DE LOGGING =====
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=app.log

# Número máximo de archivos de log
LOG_MAX_FILES=5

# Tamaño máximo de cada archivo de log en MB
LOG_MAX_SIZE=10

# ===== CONFIGURACIÓN DE EMAIL (OPCIONAL) =====
# Para notificaciones por email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ===== CONFIGURACIÓN DE CACHE (OPCIONAL) =====
# Para Redis cache
REDIS_URL=redis://localhost:6379/0

# ===== CONFIGURACIÓN DE DOMINIO =====
# URL base de la aplicación (para enlaces externos)
BASE_URL=http://localhost:5000

# ===== CONFIGURACIÓN DE METADATOS =====
# Información Dublin Core por defecto
DC_CREATOR=Ficticia INC.
DC_PUBLISHER=Metadatos App
DC_RIGHTS=© 2025 Ficticia INC. All rights reserved.
DC_LANGUAGE=es

# ===== CONFIGURACIÓN DE BACKUP (OPCIONAL) =====
# Directorio para backups automáticos
BACKUP_DIR=backups

# Frecuencia de backup en días
BACKUP_FREQUENCY=7

# ===== CONFIGURACIÓN DE DESARROLLO =====
# Puerto de desarrollo
FLASK_RUN_PORT=5000

# Host de desarrollo
FLASK_RUN_HOST=127.0.0.1

# ===== NOTAS IMPORTANTES =====
# 1. NUNCA subas el archivo .env al repositorio
# 2. Cambia TODAS las contraseñas y claves secretas en producción
# 3. Para producción, usa variables de entorno del sistema en lugar de .env
# 4. Considera usar un servicio de gestión de secretos para producción
